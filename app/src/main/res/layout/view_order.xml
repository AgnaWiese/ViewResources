<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/textPayTitle"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:text="@string/price_header"
        android:textAppearance="@style/TextAppearance.VR.Headline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="20sp"
        android:text="41.24"
        android:textAppearance="@style/TextAppearance.VR.Headline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="36.00"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="2.00"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:text="3.50"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textPaySubTitle1"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/price_title"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPayTitle" />

    <TextView
        android:id="@+id/textPaySubTitle2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="@string/price_subTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintTop_toBottomOf="@+id/textPaySubTitle1" />

    <TextView
        android:id="@+id/textPaySubTitle3"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:text="@string/price_tax"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.VR.Body1"
        app:layout_constraintTop_toBottomOf="@+id/textPaySubTitle2" />

    <Button
        android:id="@+id/btn_pay"
        style="@style/ButtonAdditional"
        app:icon="@drawable/ic_baseline_account_balance_wallet_24"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="56dp"
        android:text="Pay now"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />
</androidx.constraintlayout.widget.ConstraintLayout>